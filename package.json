{
  "name": "@xcpcio/monorepo",
  "type": "module",
  "version": "0.68.0",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm -r --filter=./packages/**/* run build && nr build:docs",
    "build:libs": "pnpm -r --filter=./packages/libs/**/* run build",
    "build:docs": "npm -C docs run build",
    "build:board": "npm -C packages/apps/board run build",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:ci": "nr build && nr lint && nr test",
    "docs": "npm -C docs run dev",
    "board": "npm -C packages/apps/board run dev",
    "release": "bumpp package.json docs/package.json packages/**/*/package.json --all --commit --tag --push",
    "publish:npm": "pnpm -r publish --no-git-checks --access public",
    "publish:npm_with_build": "cross-env BUILD_MODE=npm_publish pnpm build && pnpm -r publish --no-git-checks --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/ni": "catalog:",
    "@babel/types": "catalog:",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@unocss/eslint-config": "catalog:",
    "bumpp": "catalog:",
    "cross-env": "catalog:",
    "eslint": "catalog:",
    "esmo": "catalog:",
    "fsxx": "catalog:",
    "glob": "catalog:",
    "npm-run-all": "catalog:",
    "pnpm": "catalog:",
    "taze": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "unocss": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "zx": "catalog:"
  }
}
