{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": [
      "esnext"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@xcpcio/types": [
        "./packages/libs/types/src/"
      ],
      "@xcpcio/core": [
        "./packages/libs/core/src/"
      ],
      "@board/*": [
        "./packages/apps/board/src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client",
      "vitest/importMeta"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "./packages/**/*.ts"
  ],
  "exclude": [
    "**/dist/**",
    "**/cache/**",
    "**/node_modules/**",
    "./packages/**/*.test.ts"
  ]
}
